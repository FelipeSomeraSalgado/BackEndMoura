@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Logo DevConnect";
}

<link rel="stylesheet" href="~/css/login.css">

<script defer>
    let usuarioNovoCadastrado = "@TempData["UsuarioNovoCadastrado"]";

    if (usuarioNovoCadastrado == "Cadastrado") {
        alert("Usuário cadastrado com sucesso! Se logue para navegar em nossa plataforma");
    }
</script>

<h1>Tela principal login - DevConnect</h1>
<main>
    <div>
        <!-- formulario -->
        <form class="estilo-formulario">
            <img src="~/images/logo-devconnectnovo-lg.svg" alt="Logo DevConnect">

            <div class="formulario-campos">
                <input type="text" placeholder="Nome de usuário">
            </div>

            <div class="formulario-campos">
                <input type="text" placeholder="Senha">
            </div>

            <button type="submit" class="formulario-botao-azul">Entrar</button>

            <p>ou</p>

            <a href="#">Esqueceu a senha?</a>

        </form>

        <section id="secao-cadastro" class="estilo-formulario">
            <p>Não tem uma conta? <a asp-controller="Usuario" asp-action="Index">Cadastre-se</a></p>
        </section>

        <p>Obtenha o aplicativo</p>

        <section id="secao-instalacao">
            <img src="~/images/app-store.svg" alt="Imagem falando da instalação no App Store">

            <img src="~/images/google-play.svg" alt="Imagem falando da instalação no Play Store">
        </section>
    </div>
</main>